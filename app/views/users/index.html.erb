<h1>Listing users</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.birthday %></td>
        <div class="btn-group" >
          
        <td> <%= link_to 'Show', user, class: 'btn btn-primary btn-s' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info btn-s'%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-s'%></td>
      </tr>
        </div>
        
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New User', new_user_path, class:'btn btn-success btn-s' %>
